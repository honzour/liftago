<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adleritech.android.developertest.application"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:name="com.adleritech.android.developertest.application.DeveloperTestApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
         <activity
            android:label="@string/app_name"
            android:name="SplashScreenActivity"  >
           	<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="WaitingActivity"
            android:excludeFromRecents="true"
            android:label="@string/waiting_waiting" />
        
        <activity
            android:name="RideActivity"
            android:excludeFromRecents="true"
            android:label="@string/ride" />
                
        <activity
            android:name="BroadcastingActivity"
            android:excludeFromRecents="true"
            android:label="@string/broadcasting" />
    </application>
</manifest>
